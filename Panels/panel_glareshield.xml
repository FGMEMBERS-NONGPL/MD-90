<!-- AutoThrottle Setting Knob -->

      <action>
        <name>ATInc</name>
        <button>0</button>
        <x>-150</x>
        <y>-32</y>
        <w>25</w>
        <h>32</h>
        <binding>
          <condition>
            <equals>
              <property>autopilot/locks/at-mode</property>
              <value>0</value>
            </equals>
          </condition>
          <command>property-adjust</command>
          <property>/autopilot/settings/target-speed-kt</property>
          <step>1</step>
          <min>0</min>
          <max>300</max>
          <wrap>false</wrap>
        </binding>
        <binding>
          <condition>
            <equals>
              <property>autopilot/locks/at-mode</property>
              <value>1</value>
            </equals>
          </condition>
          <command>property-adjust</command>
          <property>/autopilot/settings/target-mach</property>
          <step>0.01</step>
          <min>0</min>
          <max>0.82</max>
          <wrap>false</wrap>
        </binding>
      </action>
      <action>
