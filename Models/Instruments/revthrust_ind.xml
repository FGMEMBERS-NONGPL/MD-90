<?xml version="1.0"?>

<PropertyList>

<path>revthrust_ind.ac</path>

<animation>
  <type>select</type>
  <object-name>FaceEngRevL</object-name>
  <condition>
    <or>
      <property>controls/engines/engine[0]/reverser</property>
	  <not>
		<property>controls/engines/engine[0]/reverser</property>
	  </not>
    </or>
  </condition>
</animation>
<animation>
  <type>select</type>
  <object-name>FaceEngRevLOn</object-name>
  <condition>
	<and>
    <property>controls/engines/engine[0]/reverser</property>
	<greater-than>
	  <property>systems/electrical/outputs/efis</property>
	  <value>15</value>
	</greater-than>
	</and>
  </condition>
</animation>

<animation>
  <type>select</type>
  <object-name>FaceEngRevR</object-name>
  <condition>
    <or>
      <property>controls/engines/engine[1]/reverser</property>
	  <not>
		<property>controls/engines/engine[1]/reverser</property>
	  </not>
    </or>
  </condition>
</animation>
<animation>
  <type>select</type>
  <object-name>FaceEngRevROn</object-name>
  <condition>
	<and>
    <property>controls/engines/engine[1]/reverser</property>
	<greater-than>
	  <property>systems/electrical/outputs/efis</property>
	  <value>15</value>
	</greater-than>
	</and>
  </condition>
</animation>

</PropertyList>

